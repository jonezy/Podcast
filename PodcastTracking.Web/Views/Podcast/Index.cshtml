@model PodcastTracking.Web.Models.PodcastViewModel
@{
    ViewBag.Title = "Index";
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>
<h3>Episodes</h3>
<div class="row">
    @foreach (var episode in Model.Episodes)
    {
        <div class="col-lg-12">
            <h4>
                @episode.Title
            </h4>
            <p>@MvcHtmlString.Create(@episode.Description)</p>
        </div>
        <hr />
    }
</div>